# #-- zone_expire_restart.test --#
# source the master var file when it's there
[ -f ../.tpkg.var.master ] && source ../.tpkg.var.master
# use .tpkg.var.test for in test variable passing
[ -f .tpkg.var.test ] && source .tpkg.var.test
. ../common.sh

# start NSD
get_random_port 1
TPKG_PORT=$RND_PORT

PRE="../.."
TPKG_NSD="$PRE/nsd"
NSD_OPTS="-V 5"
# share the vars
echo "export TPKG_PORT=$TPKG_PORT" >> .tpkg.var.test

$TPKG_NSD -c nsd.conf -p $TPKG_PORT $NSD_OPTS
wait_nsd_up nsd.log
# example.net should be expired
wait_logfile nsd.log "zone example.net has expired" 10

echo port: $TPKG_PORT
dig @127.0.0.1 -p $TPKG_PORT example.net SOA | tee data
if grep SERVFAIL data; then
	echo OK
else
	echo "zone was not expired"
	cat nsd.log
	exit 1
fi

echo "stop server"
kill_pid `cat nsd.pid`

# cleanup left-overs
rm -f nsd.log nsd.pid

echo "xfrd.state"
cat xfrd.state
# now start the server again and check the zone is expired
echo "restart server"
$TPKG_NSD -c nsd.conf -p $TPKG_PORT $NSD_OPTS
wait_nsd_up nsd.log
# wait for a second to have the expire propagate
wait_logfile nsd.log "zone example.net has expired" 10

dig @127.0.0.1 -p $TPKG_PORT example.net SOA | tee data
if grep SERVFAIL data; then
	echo OK
else
	echo "zone was not expired after restart"
	cat nsd.log
	exit 1
fi


cat nsd.log

exit 0
